<%- include("header") -%>
<div class="box1" id="heading">

   <h1>To-Do List</h1>
</div>

<div class="box">

   <% newListItems.forEach(function(item){ %>
   <form action="/delete" method="post">
      <div class="item">
         <div class="round">

            <input type="checkbox" name="checkbox" value="<%=item._id %>" onChange="this.form.submit()" id="checkbox">
            <label for="checkbox"></label>

         </div>
         <p class="listItem"><%= item.name %></p>
         <br>
      </div>

   </form>
   <% }); %>

   <form class="item" action="/" method="post">
      <input type="text" name="n">
      <button id="b" type="submit" <span id="s2"></span>+</span></button>
   </form>
</div>